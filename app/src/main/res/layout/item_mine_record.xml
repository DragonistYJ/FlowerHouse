<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/item_mine_record_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_mine_record_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5月"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/item_mine_record_day"
        app:layout_constraintTop_toBottomOf="@id/item_mine_record_day" />

    <View
        android:id="@+id/item_mine_record_round"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_gray"
        app:layout_constraintLeft_toRightOf="@id/item_mine_record_day"
        app:layout_constraintTop_toTopOf="@id/item_mine_record_day" />

    <View
        android:id="@+id/item_mine_record_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#AAAAAA"
        app:layout_constraintBottom_toBottomOf="@id/item_mine_record_name"
        app:layout_constraintLeft_toLeftOf="@id/item_mine_record_round"
        app:layout_constraintRight_toRightOf="@id/item_mine_record_round"
        app:layout_constraintTop_toBottomOf="@id/item_mine_record_round" />

    <ImageView
        android:id="@+id/item_mine_record_img"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@id/item_mine_record_name"
        app:layout_constraintLeft_toRightOf="@id/item_mine_record_round"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_mine_record_round" />

    <TextView
        android:id="@+id/item_mine_record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="24dp"
        android:text="绣球花"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/item_mine_record_img"
        app:layout_constraintTop_toBottomOf="@id/item_mine_record_img" />
</android.support.constraint.ConstraintLayout>