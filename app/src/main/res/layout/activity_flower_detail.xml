<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FlowerDetailActivity">

    <LinearLayout
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#f0f1f3"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_left_arrow" />

        <TextView
            android:id="@+id/detail_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="牡丹信息"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/detail_bottom"
        app:layout_constraintTop_toBottomOf="@+id/detail_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/detail_flower_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_button"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="牡丹"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/detail_flower_language"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_flower_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="花语：富贵圆满"
                android:textColor="#858585"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_flower_name" />

            <ImageView
                android:id="@+id/detail_flower_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_flower_language"
                app:layout_constraintWidth_percent="0.84" />

            <TextView
                android:id="@+id/detail_poem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="诗词赏花"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_flower_img" />

            <TextView
                android:id="@+id/detail_poem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="唯有牡丹真国色，花开时节动京城"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/detail_flower_img"
                app:layout_constraintRight_toRightOf="@id/detail_flower_img"
                app:layout_constraintTop_toBottomOf="@id/detail_poem_title" />

            <View
                android:id="@+id/detail_line1"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="#f0f1f3"
                app:layout_constraintTop_toBottomOf="@id/detail_poem" />

            <TextView
                android:id="@+id/detail_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="详细了解"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_line1" />

            <View
                android:id="@+id/detail_line2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginRight="8dp"
                android:background="#000"
                app:layout_constraintBottom_toBottomOf="@id/detail_detail_title"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/detail_detail_title"
                app:layout_constraintTop_toTopOf="@id/detail_detail_title"
                app:layout_constraintWidth_percent="0.1" />

            <View
                android:id="@+id/detail_line3"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:background="#000"
                app:layout_constraintBottom_toBottomOf="@id/detail_detail_title"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@id/detail_detail_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/detail_detail_title"
                app:layout_constraintWidth_percent="0.1" />

            <TextView
                android:id="@+id/detail_context"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="dfsdfad\nfdfadsfasdf\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nfgfgfdgsdf\ndsfs"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_detail_title"
                app:layout_constraintWidth_percent="0.9" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/flower_detail_gradient"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.07">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_similar_command" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="多彩生活"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/detail_meet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="遇见花朵"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>